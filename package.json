{
  "name": "assessment-ecommerce-website-framework",
  "version": "1.0.0",
  "description": "Assessment: Test Automation for E-commerce Website",
  "license": "ISC",
  "author": "Kyriakos Karpontinis",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test:all": "wdio run ./wdio.conf.js",
    "test:auth": "wdio run ./wdio.conf.js --spec ./test/specs/auth.spec.js",
    "test:burger": "wdio run ./wdio.conf.js --spec ./test/specs/burgerMenu.spec.js",
    "test:cart": "wdio run ./wdio.conf.js --spec ./test/specs/cart.spec.js",
    "test:checkout": "wdio run ./wdio.conf.js --spec ./test/specs/checkout.spec.js",
    "test:inventory": "wdio run ./wdio.conf.js --spec ./test/specs/inventory.spec.js",
    "report:generate": "allure generate allure-results --clean -o allure-report",
    "report:open": "allure open allure-report",
    "report": "npm run report:generate && npm run report:open"
  },
  "devDependencies": {
    "@wdio/allure-reporter": "^9.24.0",
    "@wdio/cli": "^9.23.3",
    "@wdio/local-runner": "^9.23.3",
    "@wdio/mocha-framework": "^9.23.3",
    "@wdio/spec-reporter": "^9.23.3",
    "allure-commandline": "^2.36.0"
  }
}
